container_commands:
    01_migrate:
        command: "source /var/app/venv/*/bin/activate && python3 /var/app/current/manage.py migrate"
        leader_only: true

    02_collectstatic:
        command: "source /var/app/venv/*/bin/activate && python3 /var/app/current/manage.py collectstatic"
        leader_only: true
option_settings:
    aws:elasticbeanstalk:container:python:
        WSGIPath: AltText.wsgi:application
    aws:elasticbeanstalk:environment:proxy:staticfiles:
        /static: static_deploy